#:kivy 1.1.0

<RootScreen>:
    ImageSelectScreen:
    SteganoScreen:
    InsertScreen:

<ImageSelectScreen>:
    name: 'ImageSelectScreen'
    imgbutton: imgbutton
    
    BoxLayout:
        orientation: 'horizontal'
        Image:
            id: imgbutton
            size_hint_x: 0.7
            source: root.manager.img
        
        BoxLayout:
            size_hint_x: 0.3
            orientation: 'vertical'
            Button:
                text: 'Steganographie'
                on_release:
                    root.manager.current = 'SteganoScreen'
                    root.manager.transition.direction = 'left'
            Button:
                text: 'Steganalyse'
                on_release:
                    root.manager.current = 'InsertScreen'
                    root.manager.transition.direction = 'left'

<SteganoScreen>
    name: 'SteganoScreen'
    stegoimg: stegoimg
    coverimg: coverimg
    gobutton: gobutton
    message: message
    key: key
    tabbedpanel: tabbedpanel
    dropdownbutton: dropdownbutton
    coverpanel: coverpanel
    stegopanel: stegopanel
    document: document

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.08
            spacing: '3sp'
            padding: '3sp'
            Button:
                text: 'Back'
                on_release:
                    root.manager.current = 'ImageSelectScreen'
                    root.manager.transition.direction = 'right'
            Button:
                text: 'Load Cover'
                on_release:
                    root.custom_switch_to(root.coverpanel)
                    root.show_load()
            Button:
                text: 'Load Stego'
                on_release:
                    root.custom_switch_to(root.stegopanel)
                    root.show_load()

            Button:
                text: 'Save Stego'
                on_release: root.show_save()
                    
            Label:
                text: 'Steganography'

        BoxLayout:
            TabbedPanel:
                id: tabbedpanel
                do_default_tab: False
                spacing: '10sp'
                padding: '10sp'
                
                TabbedPanelItem:
                    id: coverpanel
                    on_press: root.custom_switch_to(self)
                    text: 'Cover Image'
                    Image:
                        id: coverimg
                        source: root.manager.img

                TabbedPanelItem:
                    id: stegopanel
                    on_press: root.custom_switch_to(self)
                    text: 'Stego Image'
                    Image:
                        id: stegoimg
                        source: 'empty.png'

            BoxLayout:
                spacing: '5sp'
                padding: '5sp'
                orientation: 'vertical'
                size_hint_x: 0.4
                TextInput:
                    id: key
                    size_hint_y: 0.1
                    hint_text: 'Key'
                TextInput:
                    id: message
                    hint_text: 'Text'
                TextInput:
                    id: document    
                    size_hint_y: 0.2
                    on_focus: root.unfocus()
                Button:
                    id: dropdownbutton
                    size_hint_y: 0.1
                    text: 'method1'
                Button:
                    id: gobutton    
                    size_hint_y: 0.1
                    text: 'Embedd'
                    on_release: root.on_go_click()


<InsertScreen>
    name: 'InsertScreen'
    coverimg: coverimg
    stegoimg: stegoimg
    message: message
    key: key

    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.1
            spacing: '500sp'
            Button:
                text: 'Back'
                on_release:
                    root.manager.current = 'ImageSelectScreen'
                    root.manager.transition.direction = 'right'
            Label:
                text: 'Insert'

        BoxLayout:
            spacing: '10sp'
            Image:
                id: coverimg
                source: root.manager.img

            ImageButton:
                id: stegoimg
                source: root.manager.img
                on_release: root.show_save();
                source: 'empty.png'
                
        BoxLayout:
            spacing: '10sp'
            size_hint_y: 0.1
            TextInput:
                id: message
                hint_text: 'Text to insert'
            TextInput:
                id: key
                hint_text: 'Key'
            Button:
                text: 'Go'
                on_release: root.insert()

<LoadDialog>:
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            rootpath: '.'

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Load"
                on_release: root.load(filechooser.path, filechooser.selection)

<SaveDialog>:
    text_input: text_input
    BoxLayout:
        size: root.size
        pos: root.pos
        orientation: "vertical"
        FileChooserIconView:
            id: filechooser
            rootpath: '.'
            on_selection: text_input.text = self.selection and self.selection[0] or ''

        TextInput:
            id: text_input
            size_hint_y: None
            height: 30
            multiline: False

        BoxLayout:
            size_hint_y: None
            height: 30
            Button:
                text: "Cancel"
                on_release: root.cancel()

            Button:
                text: "Save"
                on_release: root.save(filechooser.path, text_input.text)
